<div class="card-body">
    <div class="basic-elements">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title">
                        <h4>Yeni Proje</h4>

                    </div>
                    <div class="card-body">
                        <div class="basic-elements">
                            <form action="~/Project/ProjectAdd" method="post" class="form-horizontal">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">Proje kodu8249848954</label>
                                            <div class="col-lg-9">
                                                
                                                <input required maxlength="255" type="text" class="form-control" placeholder="Proje Kodu" minlength=1 name="ProjectCode" oninvalid="this.setCustomValidity('Proje kodu boş geçilemez.')" oninput="setCustomValidity('')"/>
                                                @*<input type="text" class="form-control" placeholder="Proje Kodu" name="ProjectCode">*@
                                            </div>
                                        </div>
                                       
                                              <div class="form-group">
                                            <label class="col-lg-3 control-label">Proje Müşterisi </label>
                                            <div class="col-lg-9">
                                                <input type="text" class="form-control" placeholder="Proje Müşterisi" name="ProjectClient">
                                            </div>
                                        </div>
                                        
                                        
                                    </div>
                                    <div class="col-lg-6">

                                       <div class="form-group">
                                            <label class="col-lg-3 control-label">Proje Adı</label>
                                            <div class="col-lg-9">
                                                <input required maxlength="255" type="text" class="form-control" placeholder="Proje Adı" minlength=1 name="ProjectName" oninvalid="this.setCustomValidity('Proje adı boş geçilemez.')" oninput="setCustomValidity('')"/>
                                                @*<input type="text" class="form-control" placeholder="Proje Adı" name="ProjectName">*@
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">Proje Tarihi</label>
                                            <div class="col-lg-9">
                                                <input type="date" class="form-control" placeholder="Proje Tarihi" name="ProjectStartDate">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">Durum</label>
                                            <div class="col-lg-9">
                                                  <select class="form-control" name="ProjectStatus">
                                                
                                                    <option  value="Aktif">Aktif</option>
                                                    <option  value="Pasif">Pasif</option>
                                              }
                                            </select>
                                            </div>
                                        </div>

                                        
                                        </div>
                                        
                                </div>
                                 <div class="row">
                                    <div class="col-lg-6">
                                        <a asp-controller="Project" asp-action="ProjectList" type="submit" class="btn btn-danger" style="width:150px">
                                            Listeye Dön
                                        </a>
                                        <button class="btn btn-primary" type="submit"> Ekle </button>
                                        
                                    </div>
                                   
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /# column -->
            <!-- /# column -->
        </div>
    </div>
</div>
