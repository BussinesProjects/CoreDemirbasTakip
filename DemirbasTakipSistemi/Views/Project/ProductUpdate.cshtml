<!-- Styles -->
<link href="~/Content/assets/css/lib/font-awesome.min.css" rel="stylesheet">
<link href="~/Content/assets/css/lib/themify-icons.css" rel="stylesheet">
<link href="~/Content/assets/css/lib/menubar/sidebar.css" rel="stylesheet">
<link href="~/Content/assets/css/lib/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/assets/css/lib/helper.css" rel="stylesheet">
<link href="~/Content/assets/css/style.css" rel="stylesheet">
<div class="card-body">
    <div class="basic-elements">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title">
                        <h4>Proje Güncelle</h4>

                    </div>
                    <div class="card-body">
                        <div class="basic-elements">
                            <form action="~/Project/ProductUpdate" method="post" class="form-horizontal">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                  
                                            <label class="col-lg-3 control-label">Proje Kodu</label>
                                            <div class="col-lg-9">
                                               
                                                <input type="text" class="form-control"  name="ProjectCode" value="@Model.ProjectCode" readonly>
                                            </div>
                                        </div>
                                       
                                              <div class="form-group">
                                            <label class="col-lg-3 control-label">Seri Numarası </label>
                                            <div class="col-lg-9">
                                                <input type="text" class="form-control" value="@Model.ProductSerialNumber" name="ProductSerialNumber">
                                            </div>
                                        </div>
                                          <div class="form-group">
                                            <label class="col-lg-3 control-label">Marka</label>
                                            <div class="col-lg-9">
                                                <input type="text" class="form-control" value="@Model.ProductBrand"  name="ProductBrand">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">Model</label>
                                            <div class="col-lg-9">
                                                <input type="text" class="form-control" value="@Model.ProductModel"  name="ProductModel">
                                            </div>
                                        </div>
                                        
                                    </div>
                                    <div class="col-lg-6">

                                     
                                       
                                         <div class="form-group">
                                            <label class="col-lg-3 control-label">Müşteri</label>
                                            <div class="col-lg-9">
                                                <input type="text" class="form-control" value="@Model.ProductProvider"  name="ProductProvider">
                                            </div>
                                        </div>
                                         <div class="form-group">
                                            <label class="col-lg-3 control-label">Müşteri</label>
                                            <div class="col-lg-9">
                                                <input type="number" class="form-control" value="@Model.ProductAmount"  name="ProductAmount">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">Proje Tarihi</label>
                                            <div class="col-lg-9">
                                                <input type="date" class="form-control" value="@Model.ProductWarrantyStartDate.Date.ToString("dd-MM-yyyy")"autocomplete="off"  name="ProductWarrantyStartDate">
                                            </div>
                                        </div>
                                       
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">Proje Tarihi</label>
                                            <div class="col-lg-9">
                                                <input type="date" class="form-control" value="@Model.ProductWarrantyFinishDate.Date.ToString("dd-MM-yyyy")"autocomplete="off"  name="ProductWarrantyFinishDate">
                                            </div>
                                        </div>
                                       
                                </div>
                                </div>
                                 <div class="row">
                                    <div class="col-lg-6">
                                        <a asp-controller="Project" asp-action="Products" type="submit" class="btn btn-danger" style="width:150px">
                                            Listeye Dön
                                        </a>
                                        <button class="btn btn-primary" type="submit"> Güncelle </button>
                                        
                                    </div>
                                   
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /# column -->
            <!-- /# column -->
        </div>
    </div>
</div>
<script src="~/Content/assets/js/lib/jquery.nanoscroller.min.js"></script>

<script src="~/Content/assets/js/lib/preloader/pace.min.js"></script>
