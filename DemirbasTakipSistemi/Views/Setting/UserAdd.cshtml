<div class="card-body">
    <div class="basic-elements">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title">
                        <h4>Yeni Kullanıcı</h4>

                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="~/Setting/UserAdd" method="post" class="form-horizontal">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">

                                                <label class="col-lg-4 control-label">Kullanıcı Adı</label>
                                                <div class="col-lg-8">

                                                    <input type="text" class="form-control" name="Username">
                                                </div>
                                            </div>
                                            <div class="form-group">

                                                <label class="col-lg-4 control-label">Kullanıcı Şifresi</label>
                                                <div class="col-lg-8">

                                                    <input type="password" class="form-control" name="Password" value="123" oninvalid="this.setCustomValidity('Şifre boş geçilemez.')" oninput="setCustomValidity('')" required />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-lg-3 control-label">Kullanıcı Rolü (<h7>1-Admin 2-User</h7>)</label>
                                                <div class="col-lg-9">
                                                    <input type="number" class="form-control" name="RoleId" min="1" max="2">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-5 col-lg-7">
                                                    <a asp-controller="setting" asp-action="Index" type="submit" class="btn btn-danger" style="width:150px">
                                                        Listeye Dön
                                                    </a>
                                                    <button class="btn btn-primary" type="submit"> Ekle </button>
                                                </div>
                                            </div>


                                        </div>

                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <!-- /# column -->
            </div>
        </div>
    </div>
</div>
