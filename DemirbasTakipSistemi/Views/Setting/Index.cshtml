@using DemirbasTakipSistemi.Models.DataModel
@model dynamic

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<br />
<h3 style="color:green;font-family:Arial">Hesap Ayarları</h3>
<br />
<div class="col-lg-12">
    <h5 style="color: green; font-family: Arial">Genel Ayarlar</h5>

    <form action="~/Setting/UsernamePasswordUpdate" method="post" class="form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <button class="btn btn-group-right" style="font-size:15px ;font-family:Arial" type="submit"> Kullanıcı Adı ve Şifre Değiştir </button>
            </div>
        </div>
    </form>
</div>

@if (((int)Model.role) == 1)
{
    <div class="col-lg-12">

        <h5 style="color: green; font-family: Arial">Admin Ayarları</h5>
        <br />
        <!-- Styles -->
        <link href="~/Content/assets/css/lib/font-awesome.min.css" rel="stylesheet">
        <link href="~/Content/assets/css/lib/themify-icons.css" rel="stylesheet">
        <link href="~/Content/assets/css/lib/data-table/buttons.bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/assets/css/lib/menubar/sidebar.css" rel="stylesheet">
        <link href="~/Content/assets/css/lib/helper.css" rel="stylesheet">
        <link href="~/Content/assets/css/lib/sweetalert/sweetalert.css" rel="stylesheet">

        <div class="content-wrap" style="font-size:15px; font-family:Arial; color: black">
            <div class="main">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-06 p-r-0 title-margin-right">
                            <div class="page-header">
                                <div class="page-title">
                                    <h5 style="font-family:Arial">Kullanıcı Listesi</h5>
                                </div>
                            </div>
                        </div>

                        <!-- /# column -->
                        <div class="col-lg-10 p-l-0 title-margin-left">
                            <div class="page-header">
                                <div class="page-title">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item">   <button class="btn-flat  btn-success  ti-plus" onclick="location.href='@Url.Action("UserAdd", "Setting", new { code = "", prev = 2 })';return false;" style="font-size:15px; font-family:Arial"> EKLE</button></li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                        <!-- /# column -->

                    </div>

                    <!-- /# row -->
                    <section id="main-content">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="bootstrap-data-table-panel">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th class="ti-list"></th>
                                                        <th>Kullanıcı Adı</th>
                                                        <th>Kullanıcı Rolü</th>
                                                        <th>İşlem</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.list)
                                                    {
                                                        @if (item.isEnabled)
                                                        {

                                                            <tr>
                                                                <td>@item.Id</td>
                                                                <td>@item.Username</td>
                                                                @if (item.RoleId == 1)
                                                                {
                                                                    <td>Admin</td>
                                                                }
                                                                else
                                                                {
                                                                    <td>User</td>
                                                                }
                                                                <td>
                                                                    <button class="btn-flat  btn-warning ti-pencil"  style="height:35px; width:40px" onclick="location.href='@Url.Action("UserUpdate", "Setting", new { id = @item.Id })';return false;"></button>
                                                                    <button class="btn-flat  btn-danger " style="height:35px; width:40px"  >@Html.ActionLink("", "UserDelete", new { id = item.Id }, new { @class = "ti-trash", onclick= "return confirm('Silmek istediğinize emin misiniz ?')" })</button>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }       
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <!-- /# card -->
                            </div>
                            <!-- /# column -->
                        </div>
                    </section>
                </div>
            </div>

            <!-- scripit init-->
            <script src="~/Content/assets/js/lib/data-table/datatables.min.js"></script>
            <script src="~/Content/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
            <script src="~/Content/assets/js/lib/sweetalert/sweetalert.min.js"></script>
            <script src="~/Content/assets/js/lib/sweetalert/sweetalert.init.js"></script>

            <script src="~/Content/assets/js/lib/data-table/buttons.flash.min.js"></script>
            <script src="~/Content/assets/js/lib/data-table/jszip.min.js"></script>
            <script src="~/Content/assets/js/lib/data-table/pdfmake.min.js"></script>
            <script src="~/Content/assets/js/lib/data-table/vfs_fonts.js"></script>
            <script src="~/Content/assets/js/lib/data-table/buttons.html5.min.js"></script>
            <script src="~/Content/assets/js/lib/data-table/buttons.print.min.js"></script>
            <script src="~/Content/assets/js/lib/data-table/datatables-init.js"></script>

        </div>
    </div>
}
