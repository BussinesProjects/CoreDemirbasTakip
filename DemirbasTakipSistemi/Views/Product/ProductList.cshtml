<div class="content-wrap" style="font-size:15px; font-family:Arial; color: black">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>ÜRÜN TAKİP SİSTEMİ | <span>Demirbaş Listesi</span></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"> <button class="btn-flat  btn-success"  onclick="location.href='@Url.Action("ProductAdd", "Product", new {code = "", prev = 2})';return false;" style="width:40px; height:35px ">
                                    <img src="~/Content/assets/svg/add.svg" class="filter-white" alt="Ekle" width="25" height="25">
                                </button></li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->

            </div>
           
            <!-- /# row -->
            <section id="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="bootstrap-data-table-panel">
                                <div class="table-responsive">
                                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Seri Numarası</th>
                                                <th>Proje Kodu</th>
                                                <th>Marka</th>
                                                <th>Sorumlu</th>
                                                <th>Kategori</th>
                                                <th>Eklenme Tarihi</th>
                                                <th>Adet</th>
                                                <th>İşlem</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                           {
                                                @if (item.isEnabled)
                                                {
                                                    <tr>
                                                        <td> <div class="blob">@item.ProductSerialNumber</div></td>
                                                        <td> <div class="blob">@item.ProjectCode</div></td>
                                                        <td> <div class="blob">@item.ProductBrand</div></td>
                                                        <td> <div class="blob">@item.Person.PersonName</div></td>
                                                        <td> <div class="blob">@item.Category.CategoryName</div></td>
                                                        <td> <div class="blob">@item.RegisterDateTime.Date.ToString("dd-MM-yyyy")</div></td>
                                                        <td>@item.ProductAmount</td>
                                                        <td>
                                                            <button class="btn-flat  btn-warning ti-pencil" style="width:40px; height:35px " onclick="location.href='@Url.Action("ProductUpdate", "Product",new{id=@item.Id, pre = 2})';return false;"></button>
                                                            <button class="btn-flat  btn-info ti-info"  style="width:40px; height:35px " onclick="location.href='@Url.Action("ProductInfo", "Product",new{id=@item.Id, pre = 2})';return false;"></button>
                                                            <button class="btn-flat  btn-danger "  style="width:40px; height:35px; color:white"> @Html.ActionLink("", "ProductDelete", new { id = item.Id }, new { @class = "ti-trash", onclick = "return confirm('Silmek istediğinize emin misiniz ?')" })</button>
                                                            @*<button class="btn-flat  btn-danger ti-trash " style="width:40px; height:35px " onclick=" "return confirm('Silmek istediğinize emin misiniz ?')"">@Html.ActionLink("", "ProductDelete", new { id = item.Id }, new { @class = "btn - flat  btn - danger ti-trash", onclick = "return confirm('Silmek istediğinize emin misiniz ?')"})</button>*@
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- /# card -->
                    </div>
                    <!-- /# column -->
                </div>
            </section>
        </div>
    </div>
</div>

