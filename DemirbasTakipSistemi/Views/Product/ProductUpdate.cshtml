<link rel="apple-touch-icon" sizes="57x57" href="http://placehold.it/57.png/000/fff">

<!-- Styles -->
<link href="~/Content/assets/css/lib/font-awesome.min.css" rel="stylesheet">
<link href="~/Content/assets/css/lib/themify-icons.css" rel="stylesheet">
<link href="~/Content/assets/css/lib/menubar/sidebar.css" rel="stylesheet">
<link href="~/Content/assets/css/lib/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/assets/css/lib/helper.css" rel="stylesheet">
<link href="~/Content/assets/css/style.css" rel="stylesheet">
<div class="card-body">
    <div class="basic-elements">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title">
                        <h4>Demirbaş Güncelle</h4>
         
                    </div>
                    <div class="card-body">
                        <div class="basic-elements">
                            <form action="~/Product/ProductUpdate"method="post" class="form-horizontal">
                                <div class="row" >
                                    <div class="col-lg-4">
                                        
                                        <div class="form-group">
                                            <label>Oluşturulma tarihi</label>
                                           <input class="form-control" name="RegisterDateTime" value="@Model.Item1.RegisterDateTime.Date.ToString("dd-MM-yyyy")" readonly>
                                        </div>
                                        
                                        <label>Proje Kodu</label>
                                        <select class="form-control" name="ProjectCode">
                                            <option name="data" value=""></option>
                                            @foreach (var item in Model.Item2.Projects)
                                            {
                                                    
                                                if ( item.isEnabled)
                                                {
                                                    if (item.ProjectCode==Model.Item1.ProjectCode)
                                                    {
                                                        <option name="data" value="@item.ProjectCode" selected>@item.ProjectCode</option>
                                                    
                                                    }
                                                    else {
                                                        <option name="data" value="@item.ProjectCode">@item.ProjectCode</option>
                                                    }                                                    
                                                }
                                            }
                                        </select>

                                        <div class="form-group">
                                            <label>Demirbaş Sorumlusu</label>
                                            <select class="form-control"  name="PersonID">
                                                @foreach (var item in Model.Item2.People)
                                                {
                                                    if (item.isEnabled)
                                                    {
                                                        if (item.PersonID == Model.Item1.PersonID)
                                                        {

                                                            <option name="data" value="@item.PersonID" selected>@item.PersonName</option>
                                                        }
                                                        else
                                                        {
                                                            <option name="data" value="@item.PersonID">@item.PersonName</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label>Adedi</label>
                                           <input type="number" class="form-control" name="ProductAmount" value="@Model.Item1.ProductAmount" min="0">
                                        </div>

                                        
                                        <div class="form-group">
                                            <span>Ürün Fotoğrafı:</span>
                                             <input type="file" name="postedFiles" multiple />
                                        </div>
                                        @*<div class="form-group">
                                            <label>Ürün Fotoğrafı</label>
                                            <input class="form-control" type="file" name="ProductImage"> 
                                        </div>*@



                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>Marka</label>
                                            <input class="form-control" type="text" name="ProductBrand" value="@Model.Item1.ProductBrand">

                                        </div>
                                        <div class="form-group">
                                            <label>Model</label>
                                            <input class="form-control" type="text" name="ProductModel" value="@Model.Item1.ProductModel">

                                        </div>
                                        <div class="form-group">
                                            <label>Demirbaş Kategori</label>
                                            <select class="form-control" name="CategoryID">
                                                @foreach (var item in Model.Item2.Categories)
                                                {
                                                    if (item.isEnabled)
                                                    {
                                                        if (item.CategoryID == Model.Item1.CategoryID)
                                                        {
                                                            <option name="data" value="@item.CategoryID" selected>@item.CategoryName</option>
                                                        }
                                                        else
                                                        {
                                                            <option name="data" value="@item.CategoryID" >@item.CategoryName</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Seri Numarası</label>
                                            <input type="hidden" class="form-control" name="Id" value=@Model.Item1.Id >
                                            <input class="form-control" name="ProductSerialNumber" type="text" value="@Model.Item1.ProductSerialNumber">
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>Özellikler/Açıklama</label>
                                            <textarea class="form-control" style="height: 80px;"  name="ProductFeatures" >@Model.Item1.ProductFeatures</textarea>
                                        </div>



                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>Servis İletişim</label>
                                            <input class="form-control" type="text"  name="ServiceContact" value="@Model.Item1.ServiceContact">
                                        </div>
                                        <div class="form-group">
                                            <label>Ürün Dağıtıcısı</label>
                                            <input class="form-control" type="text"  name="ProductProvider" value="@Model.Item1.ProductProvider">
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>Garanti Başlangıç Tarihi</label>
                                            <input class="form-control" type="date" name="ProductWarrantyStartDate" value="@Model.Item1.ProductWarrantyStartDate.Date.ToString("yyyy-MM-dd")" >
                                        </div>
                                        <div class="form-group">
                                            <label>Garanti Bitiş Tarihi</label>
                                            <input class="form-control" type="date" name="ProductWarrantyFinishDate" value="@Model.Item1.ProductWarrantyFinishDate.Date.ToString("yyyy-MM-dd")" >
                                        </div>


                                    </div>
                                </div>
                                <div class="row">
                                  
                                    <div class="col-lg-4">
                                        
                                        <a asp-controller="Product" asp-action="ProductList" type="submit" class="btn btn-danger" style="width:150px">
                                            Listeye Dön
                                        </a>
                                        <button class="btn btn-primary" type="submit" > Güncelle </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /# column -->
            <!-- /# column -->
        </div>
        </div>
    </div>
        <script src="~/Content/assets/js/lib/jquery.nanoscroller.min.js"></script>

        <script src="~/Content/assets/js/lib/preloader/pace.min.js"></script>
