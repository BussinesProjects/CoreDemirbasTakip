                                                    <a asp-controller="Person" asp-action="PersonList" type="submit" class="btn btn-danger" style="width:150px;font-size:15px">
                                                        Listeye Dön
                                                    </a>
                                                    <button class="btn btn-primary" type="submit" style="font-size:15px" > Ekle </button>
                                                </div>
                                            </div>


                                        </div>

                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>
